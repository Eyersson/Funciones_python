import random
suma = 0
def sumar_pares_lista(lista):
    global suma
    num = 0
    for i in lista:
        if i % 2 == 0:
            suma = suma + i
            num = num + 1
    parametro = suma / num
    return parametro

lista = []
n = int(input("digite el tamaÃ±o de la lista: "))
for i in range(n):
    num = random.randint(1,n)
    lista.append(num)


print("lista ", lista)
print("el promedio es: ", sumar_pares_lista(lista))
print("\neso era ...")